{
  "name": "v-autosize",
  "version": "1.0.3",
  "description": "Lightweight Vue wrapper for `autosize`",
  "main": "dist/directive.js",
  "module": "src/directive.js",
  "files": [
    "/src/",
    "/dist/"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "prepublishOnly": "npm run test && npm run build",
    "lint": "eslint --ext .js ./src",
    "lint:fix": "eslint --ext .js ./src --fix",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shrpne/v-autosize.git"
  },
  "keywords": [
    "vue",
    "textarea",
    "autosize",
    "adjust",
    "height",
    "directive"
  ],
  "author": "shrpne <shrpne@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shrpne/v-autosize/issues"
  },
  "dependencies": {
    "autosize": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "rollup": "^1.15.6",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.3",
    "rollup-plugin-terser": "^5.0.0"
  }
}
